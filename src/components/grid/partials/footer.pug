.vgrid-footer
  slot(name="footer")
    slot(name="footer-start")
    PageSize(
      v-if="pagable",
      v-model="limit",
      :sizes="pageSizes",
    )
    GridStatus(
      v-if="statusable",
      :limit="limit",
      :current-page="currentPage",
      :showed="dataState.records.length",
      :total="dataState.total"
    )
    Pagination(
      v-if="pagination",
      v-model="currentPage",
      :limit="limit",
      :total="dataState.total",
    )
    slot(name="footer-end")

  .vgrid-devbar(v-if="gridOption.debug")
    .vgrid-col-9
      pre {{ dataQuery }}
    .vgrid-col-3.vgrid-align-right
      span(v-if="isLoading") Loading..
