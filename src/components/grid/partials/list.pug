.vgrid-nodata(
  v-if="!total",
)
  span(v-if="!isFiltered") {{ strEmptyData }}
  span(v-else) {{ strEmptyFilteredData }}
slot(
  name="body",
  v-if="!isEmptyData",
  :entries="showedData",
  :visible-cols="visibleCols"
)
  .vgrid-entry-wrapper(
    v-for="(entry, entryIndex) in showedData",
  )
    slot(
      :entry="entry",
      :index="entryIndex",
      :visible-cols="visibleCols"
    )
      ColumnType(
        v-for="col in visibleCols"
        :column="col",
        :data="entry",
        :key="col.id",
        :resize="true",
        :class="col.columnClasses",
      )
        slot(
          :name="'column-' + col.field", 
          :entry="entry",
          :index="entryIndex"
        )
